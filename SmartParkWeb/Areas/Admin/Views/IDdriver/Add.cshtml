@model IDdriver

<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h4 class="card-title">Adicionar Documento de Habilitação</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input asp-for="@Model.MilitaryId" hidden/>
                <div class="mb-3">
                    <label asp-for="@Model.RegisterNumber" class="form-label"></label>
                    <input asp-for="@Model.RegisterNumber" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Validity" class="form-label"></label>
                    <input asp-for="@Model.Validity" class="form-control" type="date">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Category" class="form-label"></label>
                    <input asp-for="@Model.Category" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Prosseguir</button>
            </form>
        </div>
    </div>
</div>
</div>